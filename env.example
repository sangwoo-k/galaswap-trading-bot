# GalaSwap API Configuration
GALA_WALLET_ADDRESS=your_gala_wallet_address
GALA_PRIVATE_KEY=your_private_key_encrypted
GALA_PUBLIC_KEY=your_public_key

# Security Configuration
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_32_character_encryption_key
API_RATE_LIMIT=100
MAX_TRADE_AMOUNT=1000

# Trading Configuration
DEFAULT_SLIPPAGE=0.5
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=5
TAKE_PROFIT_PERCENTAGE=10

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/trading-bot.log
MONITORING_ENABLED=true

# Server Configuration
PORT=3000
NODE_ENV=production
CORS_ORIGIN=http://localhost:3000

# Database (if using)
DATABASE_URL=postgresql://user:password@localhost:5432/trading_bot

# External APIs
GALA_API_BASE_URL=https://galaswap.gala.com
GALA_API_TIMEOUT=30000
